Type TTile    
    ' ########################################################################################################################################################################################################################################################
    ' ####
    ' ####                                                                                                                                                                                                                                 C O N S T A N T S
    ' ####
    ' ########################################################################################################################################################################################################################################################
    
	Const FLAG_UNWALKABLE:String = "UNWALKABLE"
	
    ' ########################################################################################################################################################################################################################################################
    ' ####
    ' ####                                                                                                                                                                                                                                 V A R I A B L E S
    ' ####
    ' ########################################################################################################################################################################################################################################################
    
    
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                        NUMERIC
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	
	'Summary: A link to the data of the current tile
	Field _tileClass:DataTile
    
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                      REFERENCE
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	
    'Summary: The object which is standing on the tile. 
    Field _object:TObject
    
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                           DATA
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    ' ########################################################################################################################################################################################################################################################
    ' ####
    ' ####                                                                                                                                                                                                                       P U B L I C   M E T H O D S
    ' ####
    ' ########################################################################################################################################################################################################################################################
    
	Function Create:TTile(tileClass:DataTile)
		Local this:TTile = New TTile
		this._tileClass = tileClass
		
		Return this
	End Function
	
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                         ACTION
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	
	'Summary: Checks the tile data to see if the object can leavl tile in the direction specified
	Method canMoveFrom:Int(direction:Int)
		Return _tileClass.canMoveFrom(direction) 
	End Method
	
	'Summary: Checks the tile data to see if the object can enter tile moving in the direction specified
	Method canMoveTo:Int(direction:Int)
		If _object
			Return False
		End If
		Return _tileClass.canMoveTo(direction)  
	End Method
	
	'Summary: Performs action associated with object leaving the tile
	Method objectLeft(obj:TObject, direction:Int)
		_tileClass.objectLeft(obj, direction, Self)
		_object = Null
	End Method
	
	'Summary: Performs action associated with object entering the tile
	Method objectEntered(obj:TObject, direction:Int)
		_tileClass.objectEntered(obj, direction, Self)
		_object = obj
	End Method
    
	'Summary: Draws the tile onto the playfield
	Method Draw(x:Int, y:Int)
		  _tileClass.Draw(x, y) 
	End Method
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                      MODIFIERS
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    
    'Summary: Changes the current object.
    Method setObject:Byte(o:TObject)
        If _object
            Return False
        EndIf
        
        _object = null
        return true
    End Method
    
    
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                       CHECKERS
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	
	' ########################################################################################################################################################################################################################################################
    ' ####
    ' ####                                                                                                                                                                                                                     P R I V A T E   M E T H O D S
    ' ####
    ' ########################################################################################################################################################################################################################################################
	
	' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                         ACTION
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	
	' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                      MODIFIERS
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	
	' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                       CHECKERS
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    ' ########################################################################################################################################################################################################################################################
    ' ####
    ' ####                                                                                                                                                                                                                 G E T T E R S   /   S E T T E R S
    ' ####
    ' ########################################################################################################################################################################################################################################################
    
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                        NUMERIC
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                      REFERENCE
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	
	Method GetObject:TObject()
		Return _object
	End Method
    
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    '                                                                                                                                                                                                                           DATA
    ' -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
End Type